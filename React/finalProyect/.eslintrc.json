{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
        {
            "files": [
                "*.jsx",
                "*.js"
            ]
        }
    ],
    "globals": {
        "document": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": 0,
        "semi": 0,
        "arrow-body-style": 0,
        "react/prop-types": 0,
        "react/function-component-definition": [
            "error",
            {
            "namedComponents": ["function-declaration", "arrow-function"],
            "unnamedComponents": "arrow-function"
            }
        ]
    }
}
